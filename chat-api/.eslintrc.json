{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es2020": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  },
  "globals": {
    "ErrorWithContext": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
